<p><%= @question.title %></p>
<p><%= @question.body %></p>
<p><%= @question.created_at.strftime('%Y-%m-%d %H:%M:%S') %></p>


<%= render 'answers/form' %>


<% @answers.each do |answer| %>
  <%= answer.body %>
  <p><%= answer.created_at.strftime('%Y-%m-%d %H:%M:%S') %></p>
  <%= link_to 'Edit answer', edit_question_answer_path(@question, answer) %>
  <%= link_to 'Delete answer', question_answer_path(@question, answer), method: :delete %>
<% end %>

<p><%= link_to 'Back', questions_path %></p>