<p><%= @question.title %></p>
<p><%= @question.body %></p>
<p><%= @question.created_at.strftime('%Y-%m-%d %H:%M:%S') %></p>


<%= render 'errors', object: @answer %>
<%= form_with model: [@question, @answer] do |f| %>
  <p>
    <%= f.label :body %>
    <%= f.text_field :body %>
  </p>

  <%= f.submit %>
<% end %>


<% @answers.each do |answer| %>
  <%= answer.body %>
  <p><%= answer.created_at.strftime('%Y-%m-%d %H:%M:%S') %></p>
  <p><%= link_to 'Delete answer', question_answer_path(@question, answer), method: :delete %></p>
<% end %>

<%= link_to 'Back', questions_path %>