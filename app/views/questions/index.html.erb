<h1>Questions</h1>

<% @questions.each do |question| %>
  <h2><%= question.title %></h2>
  <%= question.created_at.strftime('%Y-%m-%d %H:%M:%S') %>
  <p><%= question.body %></p>
  
  <%= link_to 'Edit', edit_question_path(question) %>
  <%= link_to 'Show', question_path(question) %>
  <%= button_to 'Delete', question_path(question), method: :delete %>
<% end %>

<p><%= link_to 'New question', new_question_path %></p>