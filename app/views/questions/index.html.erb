<h1>Questions</h1>

<p><%= link_to 'New question', new_question_path, class: 'btn btn-primary' %></p>

<% @questions.each do |question| %>
  <h4><%= question.title %></h4>
  <%= question.created_at.strftime('%Y-%m-%d %H:%M:%S') %>
  <p><%= question.body %></p>
  
  <%= link_to 'Edit', edit_question_path(question), class: 'btn btn-primary' %>
  <%= link_to 'Show', question_path(question), class: 'btn btn-secondary' %>
  <%= link_to 'Delete', question_path(question), method: :delete, class: 'btn btn-danger' %>
<% end %>